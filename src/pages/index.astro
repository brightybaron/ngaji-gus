  </body>
</html>

<script>
  const scriptURL =
    "https://script.google.com/macros/s/AKfycbyjUUG6LIyixwkA_k4QfTd2K4_niFOAQ4NWaV9p4ImS7oRypOxQGD16y3WWWG_rWsvK/exec";
  const form = document.forms["form-hadir"];
  const submitButton = document.getElementById(
    "submitBtn"
  ) as HTMLButtonElement;
  const loadingButton = document.getElementById(
    "loadingBtn"
  ) as HTMLButtonElement;
  const alertContainer = document.getElementById(
    "alertContainer"
  ) as HTMLDivElement;

  // Function to show alert notification (optimized)
  function showAlert(message: string, type: string) {
    // Clear previous alerts efficiently
    const existingAlerts = alertContainer.querySelectorAll(
      ".alert-notification"
    );
    existingAlerts.forEach((alert) => alert.remove());

    const alertDiv = document.createElement("div");
    alertDiv.className = `alert-notification mb-3 p-4 rounded-lg border-l-4 ${
      type === "success"
        ? "bg-green-50 border-green-400 text-green-800"
        : "bg-red-50 border-red-400 text-red-800"
    }`;

    // Use simpler HTML structure for better performance
    alertDiv.innerHTML = `
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <span class="mr-3 text-lg">${type === "success" ? "✅" : "❌"}</span>
          <p class="text-sm font-medium">${message}</p>
        </div>
        <button 
          type="button" 
          class="ml-4 text-gray-400 hover:text-gray-600 focus:outline-none text-xl"
          onclick="this.parentElement.parentElement.remove()"
        >
          ×
        </button>
      </div>
    `;

    alertContainer.appendChild(alertDiv);

    // Auto hide with cleanup
    const timeoutId = setTimeout(() => {
      if (alertDiv.parentNode) {
        alertDiv.remove();
      }
    }, 5000);

    // Store timeout ID for potential cleanup
    alertDiv.timeoutId = timeoutId;
  }

  // Form submission handler
  form.addEventListener("submit", function (e: { preventDefault: () => void }) {
    e.preventDefault();

    // Show loading state
    submitButton.style.display = "none";
    loadingButton.style.display = "flex";

    // Submit form data
    fetch(scriptURL, {
      method: "POST",
      body: new FormData(form),
    })
      .then((response) => {
        // Hide loading state
        submitButton.style.display = "block";
        loadingButton.style.display = "none";

        if (response.ok) {
          // Success
          form.reset();
          showAlert(
            "Data kehadiran Anda berhasil terkirim! Terima kasih atas partisipasinya.",
            "success"
          );
        } else {
          // Server error
          showAlert(
            "Terjadi kesalahan pada server. Mohon coba lagi dalam beberapa saat.",
            "error"
          );
        }
      })
      .catch((error) => {
        // Hide loading state
        submitButton.style.display = "block";
        loadingButton.style.display = "none";

        // Network or other error
        console.error("Error!", error);
        showAlert(
          "Registrasi gagal! Periksa koneksi internet Anda dan coba lagi.",
          "error"
        );
      });
  });

  // Optimized countdown with reduced frequency on mobile
  var countDown = new Date("August 24, 2025 12:00:00").getTime();
  var isMobile = window.innerWidth <= 768;
  var updateInterval = isMobile ? 2000 : 1000; // 2 seconds on mobile, 1 second on desktop

  var x = setInterval(function () {
    var now = new Date().getTime();
    var interval = countDown - now;

    var days = Math.floor(interval / (1000 * 60 * 60 * 24));
    var hours = Math.floor(
      (interval % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
    );
    var minutes = Math.floor((interval % (1000 * 60 * 60)) / (1000 * 60));
    var seconds = Math.floor((interval % (1000 * 60)) / 1000);

    // Batch DOM updates for better performance
    requestAnimationFrame(() => {
      const hari = document.getElementById("hari");
      const jam = document.getElementById("jam");
      const menit = document.getElementById("menit");
      const detik = document.getElementById("detik");

      if (hari) hari.textContent = days.toString().padStart(2, "0");
      if (jam) jam.textContent = hours.toString().padStart(2, "0");
      if (menit) menit.textContent = minutes.toString().padStart(2, "0");
      if (detik) detik.textContent = seconds.toString().padStart(2, "0");
    });

    if (interval < 0) {
      clearInterval(x);
      requestAnimationFrame(() => {
        const hari = document.getElementById("hari");
        const jam = document.getElementById("jam");
        const menit = document.getElementById("menit");
        const detik = document.getElementById("detik");

        if (hari) hari.textContent = "00";
        if (jam) jam.textContent = "00";
        if (menit) menit.textContent = "00";
        if (detik) detik.textContent = "00";
      });
    }
  }, updateInterval);
</script>
